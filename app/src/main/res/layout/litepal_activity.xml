<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="list" android:onClick="doList"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="add" android:onClick="doAdd"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="update" android:onClick="doUpdate"/>
    <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/tv_content"/>



</LinearLayout>